<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        tools:context=".RadioButtonActivity">

    <RadioGroup android:id="@+id/wb_rg_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <RadioButton android:id="@+id/wb_radio_0"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorAccent"
                     android:textSize="18sp"
                     android:text="Apple"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     android:checked="true"
        />

        <RadioButton android:id="@+id/wb_radio_1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorAccent"
                     android:textSize="18sp"
                     android:text="Banana"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
        />

    </RadioGroup>

    <RadioGroup android:id="@+id/wb_rg_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/wb_rg_0"
                android:layout_marginTop="50dp"
    >

        <RadioButton android:id="@+id/wb_radio_2"
                     android:layout_width="60dp"
                     android:layout_height="30dp"
                     android:textColor="@color/colorGray"
                     android:textSize="18sp"
                     android:text="男"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     android:checked="true"
                     android:gravity="center"
                     android:button="@null"
                     android:background="@drawable/selector_accent_radio"
        />

        <RadioButton android:id="@+id/wb_radio_3"
                     android:layout_width="60dp"
                     android:layout_height="30dp"
                     android:textColor="@color/colorGray"
                     android:textSize="18sp"
                     android:text="女"
                     android:gravity="center"
                     android:button="@null"
                     android:background="@drawable/selector_accent_radio"
        />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>