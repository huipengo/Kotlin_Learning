<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.weibo.biz.kotlin.MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="50dp"
    >

        <TextView
                android:text="Hello Kotlin, Hello Kotlin, Hello Kotlin, Hello Kotlin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:id="@+id/textview_long"
                android:layout_margin="15dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        <TextView
                android:id="@+id/textView_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="28sp"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:text="HELLO KOTLIN !!"
                android:textColor="#0000FF"
                android:drawableRight="@drawable/ic_launcher_background"
                android:drawablePadding="2dp"
                android:layout_marginTop="10dp"
        />

        <Button
                android:id="@+id/btn_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="#0000FF"
                android:textColor="#FFFFFF"
                android:text="Button"
        />

        <Button
                android:id="@+id/btn_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="#FF00FF"
                android:textColor="#FFFFFF"
                android:text="ListView"
                android:onClick="listViewClicked"
        />

        <Button
                android:id="@+id/btn_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorAccent"
                android:textColor="#FFFFFF"
                android:text="GrideView"
                android:onClick="grideViewClicked"
        />

        <Button
                android:id="@+id/btn_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_orange"
                android:textColor="#FFFFFF"
                android:text="WebView"
                android:onClick="webViewClicked"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_lifecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorAccent"
                android:textColor="#FFFFFF"
                android:text="LifeCycle"
                android:onClick="lifeCycleClicked"
                android:textAllCaps="false"
        />

        <Button
            android:id="@+id/btn_jump"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            android:text="Jump"
            android:onClick="jumpClicked"
            android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_orange"
                android:textColor="#FFFFFF"
                android:text="fragment"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_accent"
                android:textColor="#FFFFFF"
                android:text="Event"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_orange"
                android:textColor="#FFFFFF"
                android:text="数据存储"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="#FF00FF"
                android:textColor="#FFFFFF"
                android:text="RadioButton"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_accent"
                android:textColor="#FFFFFF"
                android:text="CheckBoxButton"
                android:textAllCaps="false"
        />

        <Button
                android:id="@+id/btn_popupwindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/selector_orange"
                android:textColor="#FFFFFF"
                android:text="PopupWindow"
                android:textAllCaps="false"
        />

    </LinearLayout>>

</ScrollView>