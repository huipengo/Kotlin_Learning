<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".datastorage.FileActivity">

    <EditText android:id="@+id/wb_et_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="input content"
              android:textAllCaps="false"
              android:padding="20dp"
              android:textSize="20sp"
              android:textColor="@color/colorAccent"
    />

    <Button android:id="@+id/wb_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/wb_et_name"
            android:text="Save"
            android:textSize="26sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_orange"
    />

    <Button android:id="@+id/wb_btn_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/wb_btn_save"
            android:text="显示"
            android:textSize="26sp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_orange"
    />

    <TextView android:id="@+id/wb_show_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="20dp"
              android:padding="20dp"
              app:layout_constraintTop_toBottomOf="@+id/wb_btn_show"
              android:textSize="26sp"
              android:textColor="@color/colorAccent"
    />

</android.support.constraint.ConstraintLayout>